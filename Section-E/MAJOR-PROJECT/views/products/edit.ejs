
<% layout('layout/boilerplate')  -%>
    <div class="container">
        <h1>Edit Product</h1>
    <form action="/product/<%= i._id %>?_method=PATCH" method="POST">
        <div class="mb-3">
          <label for="productName" class="form-label">productName</label>
          <input type="text" class="form-control" id="productName" name="productName" value="<%= i.productName %>"> 
        </div>
        <div class="mb-3">
          <label for="price" class="form-label">price</label>
          <input type="text" class="form-control" id="price" name="price" value="<%= i.price %>">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">description</label>
            <input type="text" class="form-control" id="description" name="description" value="<%= i.description %>">
        </div>
        <div class="mb-3">
            <label for="imageUrl" class="form-label">imageUrl</label>
            <input type="text" class="form-control" id="imageUrl" name="imageUrl" value="<%= i.imageUrl %>">
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </div>
  